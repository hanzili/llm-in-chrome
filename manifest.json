{
  "manifest_version": 3,
  "name": "Browser Agent",
  "version": "0.2.0",
  "description": "AI-powered browser automation assistant",

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "debugger",
    "tabs",
    "tabGroups",
    "sidePanel",
    "downloads"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_title": "Browser Agent"
  },

  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },

  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content/accessibility-tree.js",
        "src/content/content.js",
        "src/content/agent-visual-indicator.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
